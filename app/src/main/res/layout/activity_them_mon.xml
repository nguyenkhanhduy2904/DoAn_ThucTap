<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    tools:context=".ThemMon"
    android:orientation="horizontal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/ibtnBack"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="0"
                    android:src="@drawable/back"
                    >

                </ImageButton>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Thêm món mới"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"

                    />
                <ImageButton

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="0"
                    android:background="@null"
                    >

                </ImageButton>

            </LinearLayout>

            <LinearLayout
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hình ảnh:"
                    android:textStyle="bold"
                    android:textSize="21dp"
                    android:layout_weight="1"/>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="horizontal"
                    android:background="@drawable/cr10bd9d9d9"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/solar_camera_bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nhấn để tải ảnh lên"

                        android:textSize="16dp"
                        />

                </LinearLayout>

                



            </LinearLayout>

            <LinearLayout

                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên món ăn:"
                    android:textStyle="bold"
                    android:textSize="21dp"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/cr10bd9d9d9">

                    <EditText
                        android:inputType="text"
                        android:background="@null"
                        android:hint="Nhập tên món ăn"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:layout_marginEnd="4dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingVertical="10dp"
                        android:paddingLeft="26dp"/>
                </LinearLayout>







            </LinearLayout>

            <LinearLayout
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mô tả:"
                    android:textStyle="bold"
                    android:textSize="21dp"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/cr10bd9d9d9">

                    <EditText
                        android:inputType="text"
                        android:background="@null"
                        android:hint="Nhập mô tả món ăn"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:layout_marginEnd="4dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingVertical="10dp"
                        android:paddingLeft="26dp"/>
                </LinearLayout>







            </LinearLayout>

            <LinearLayout
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá:"
                    android:textStyle="bold"
                    android:textSize="21dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="horizontal"
                        android:background="@drawable/cr10bd9d9d9">

                        <EditText
                            android:inputType="text"
                            android:background="@null"
                            android:hint="0"
                            android:textColor="#000000"
                            android:textSize="17sp"
                            android:layout_marginEnd="4dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingVertical="10dp"
                            android:paddingLeft="26dp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:text="VND"
                        android:textSize="17dp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"/>
                </LinearLayout>









            </LinearLayout>

            <LinearLayout
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chọn danh mục cho món ăn:"
                    android:textStyle="bold"
                    android:textSize="21dp" />
                
               <RadioGroup
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                   
                   <GridLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:columnCount="2"
                       android:rowCount="2"
                       android:alignmentMode="alignBounds"
                       android:useDefaultMargins="true"
                       android:layout_gravity="center"
                       >


                       <RadioButton
                           android:id="@+id/rbOption1"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Việt Nam"
                           android:textSize="17dp"
                           android:layout_margin="10dp"


                           />

                       <RadioButton
                           android:id="@+id/rbOption2"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Thái Lan"
                           android:textSize="17dp"
                           android:layout_margin="10dp"
                           />

                       <RadioButton
                           android:id="@+id/rbOption3"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Hàn quốc"
                           android:textSize="17dp"
                           android:layout_margin="10dp"
                           />

                       <RadioButton
                           android:id="@+id/rbOption4"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Trung Quốc"
                           android:textSize="17dp"
                           android:layout_margin="10dp"
                           />

                   </GridLayout>




               </RadioGroup>



            </LinearLayout>

            <LinearLayout
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tùy chọn cho món ăn:"
                    android:textStyle="bold"
                    android:textSize="21dp" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/rbOption5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Món ăn đặt biệt"
                        android:textSize="17dp"



                        />
                    <RadioButton
                        android:id="@+id/rbOption6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Món bình thường"
                        android:textSize="17dp"

                        />


                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hủy bỏ"
                    android:backgroundTint="@color/design_default_color_error"
                    android:layout_weight="1">
                </Button>

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lưu món"
                    android:backgroundTint="@color/design_default_color_secondary"

                    android:layout_weight="1">
                </Button>

            </LinearLayout>




        </LinearLayout>





    </ScrollView>



</LinearLayout>